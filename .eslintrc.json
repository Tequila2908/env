{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
        "linebreak-style": 0,
        "eol-last": 0,
        "import/no-extraneous-dependencies": [
            "error", {
                "devDependencies": true
           }
        ],
        "max-len": [
            "error", { 
                "code": 200 
            }
        ]
    }
}